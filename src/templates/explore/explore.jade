extends ./_explore

block seo
    title Listen to Live DJ Mixes and Podcasts | Loopcast
    meta( name="description" content="Explore live DJ mixes on Loopcast. Chat with other listeners and follow your favourite DJs" )
    meta( property="og:url" content="#{s.base_path}/explore" )
    meta( property="og:title" content="Listen to Live DJ Mixes and Podcasts | Loopcast" )
    meta( property="og:description" content="Explore live DJ mixes on Loopcast. Chat with other listeners and follow your favourite DJs" )
    meta( name="twitter:title" content="Listen to Live DJ Mixes and Podcasts | Loopcast")
    meta( name="twitter:description" content="Explore live DJ mixes on Loopcast. Chat with other listeners and follow your favourite DJs")    



block grid
  .container
    .arrows
      a(href="").prevSlide.arrow
        img(src="images/arrow_left.svg", alt="Previous Slide")
      a(href="").nextSlide.arrow
        img(src="images/arrow_right.svg", alt="Next Slide")

    .swiper-container
      .swiper-wrapper

        for item in tapes

          - klasses = "item-all-genres"

          - url         = "/"+ item.user.info.username + "/r/" + item.slug
          - sharing_url = url
          - author_url  = "/"+ item.user.info.username
          - cover_url   = item.cover_url || item.user.info.avatar

          //- for g in item.genres
          //-   - console.log( slugify(g) )

          //- if not uploaded yet, just skip it
          - if( !item.s3 ) continue

          .room_cell.item.swiper-slide(class="#{klasses}", data-view="components/audio/player_preview", data-room-id="#{item._id}" data-is-live="", data-audio-url="#{item.s3.location}")
            hidden( class="source_src" value="#{item.s3.location}")

                  
            a(href="#{url}", title="#{item.title}", class="thumb_wrapper") 
              img.room_thumb.for_desktop(src="#{transform.explore_thumb(cover_url)}")
              img.room_thumb.for_mobile(src="#{transform.explore_thumb_mobile(cover_url)}")

              span.icon.ss-play.circle_icon
              .loading_spin

              - about = ""
              if item.about
                - about = item.about

              .share_wrapper(
                data-view="buttons/share", 
                data-title="#{item.title}",
                data-summary="#{about}",
                data-permalink="#{sharing_url}",
                data-image="#{item.cover_url}"
              )
                a.yellow.ss-action(href="#", title="Share")

            .room_content
              .text
                h2.room_title
                  a(href="#{url}", title="#{item.title}") #{item.title}
                a.room_subtitle.blue(title="#{item.user.info.name}", href="#{author_url}") #{item.user.info.name}

