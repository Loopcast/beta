              img(src="/images/tape-edit.png")

            p.listen_counter
              img(src="/images/tape-headphones.png")
              span.label #{tape.plays}

            p.like_counter
              img(src="/images/tape-like.png")
              span.label #{tape.likes}

            p.upload_counter
              img(src="/images/tape-cloud.png")
