extends ../layout

block content  

  - if(tape.cover_url == null)
    - tape.cover_url = '/images/record_set_header.jpg'

  div.tape_view.centered(data-view="room/tape_view")
    .tape_header(style="background-image:url(#{tape.cover_url})")
