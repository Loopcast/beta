        a(href="#", class="tape_play", title="play record")
          img(src="/images/tapes_play_button.png")

        .tape_info
          h1.transp_box.tape_title #{tape.title}
          .tape_author_wrapper._overflow
            h3.transp_box.tape_author 
              a(href="/#{tape.user.info.username}") #{tape.user.info.name}
            a._white_box(href="#") Follow

