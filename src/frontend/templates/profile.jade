extends layout

block content
  h1 #{name}

  br
  br
    
  ul
    for genre in genres
      li #{genre}

  audio( controls autoplay src="http://radio.loopcast.fm:8000/#{id}" )

  if live
    br
    br
    
    h4 live

    h3 #{live.name}

  br
  br
    
  h4 recorded

  ul
    for room in recorded
      li 
        pre
          | title : #{room.title}
          | author: #{room.author}
          | ---