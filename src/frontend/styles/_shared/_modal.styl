MARGIN_MODAL = 20px


.modal
	position: fixed
	top: 50%
	left: 50%
	width: 500px
	height: auto
	z-index: 2000
	visibility: hidden
	backface-visibility: hidden
	transform: translateX(-50%) translateY(-50%)
	
	
.md_show
	visibility: visible
	box-shadow: 1px 1px 26px -7px black
	transition: box-shadow .3s linear .2s
	
.md_overlay
	position: fixed
	width: 100%
	height: 100%
	visibility: hidden
	top: 0
	left: 0
	z-index: 1000
	opacity: 0
	background: black
	transition: all 0.3s
	
.md_show ~ .md_overlay
	opacity: 0.6
	visibility: visible
	

.md_wrapper
	color: #000;
	background: #fff;
	position: relative;
	border-radius: 3px;
	margin: 0 auto;
	font-weight: 300;
	font-size: 1em;


.md_header
	margin: 0;
	padding: 0.4em;
	text-align: center;
	font-size: 1em;
	font-weight: 300;
	opacity: 1;
	background: BLACK
	color: white
	border-radius: 3px 3px 0 0;
	position: relative
	padding: 13px MARGIN_MODAL 13px
	margin: 0;
	.md_logo
		display: block
		
	.tabs
		position: absolute 
		right: MARGIN_MODAL 
		bottom: 0
		open_bold()
		a
			display: inline-block
			padding: 10px 20px
			
			&.active
				background: white
				border-radius: 3px 3px 0 0
				color: GRAY_2


.md_content
	padding: 30px MARGIN_MODAL
	margin: 0;
	p
		margin: 0;
		padding: 10px 0;
		
	
#createroom_modal
	text-align: left
	width: 350px
	.md_content
		padding: 20px
	h4
		font-size: 1.3em
		margin-bottom: 10px
	label
		text-transform: uppercase
		font-size: 0.8em
		color: black
		margin-bottom: 10px
		display: block
	
	input
		font-size: 0.75em
		
	.button
		margin-bottom: 10px
		padding-top: 12px
		padding-bottom: 12px
		height: 45px
		
.no_touch_device
	#createroom_modal
		.button.yellow_button:hover
			background-image: linear-gradient(180deg, rgb(255, 200, 10) 11%, rgb(245, 190, 0) 42%, rgb(229, 177, 0) 73%)
			color: BLACK
			


.slide_from_bottom .md_wrapper
	transform: translateY(200%)
	opacity: 0
	transition: all 0.3s ease-out

.md_show.slide_from_bottom .md_wrapper
	transform: translateY(0)
	opacity: 1