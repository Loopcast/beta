MARGIN_MODAL = 20px


.modal
	position: fixed
	top: 50%
	left: 50%
	width: 500px
	height: auto
	z-index: 2000
	visibility: hidden
	backface-visibility: hidden
	transform: translateX(-50%) translateY(-50%)
	
	
.md_show
	visibility: visible
	box-shadow: 1px 1px 26px -7px black
	transition: box-shadow .3s linear .2s
	
.md_overlay
	position: fixed
	width: 100%
	height: 100%
	visibility: hidden
	top: 0
	left: 0
	z-index: 1000
	opacity: 0
	background: black
	transition: all 0.3s
	
.md_show ~ .md_overlay
	opacity: 0.6
	visibility: visible
	

.md_content
	color: #000;
	background: #fff;
	position: relative;
	border-radius: 3px;
	margin: 0 auto;


.md_header
	margin: 0;
	padding: 0.4em;
	text-align: center;
	font-size: 1em;
	font-weight: 300;
	opacity: 1;
	background: BLACK
	color: white
	border-radius: 3px 3px 0 0;
	position: relative
	.md_logo
		display: block
		
	.tabs
		position: absolute 
		right: MARGIN_MODAL 
		bottom: 0
		open_bold()
		a
			display: inline-block
			padding: 10px
			
			&.active
				background: white
				border-radius: 3px 3px 0 0
				color: black


.md_content 
	& > div
		padding: 13px MARGIN_MODAL 13px
		margin: 0;
		font-weight: 300;
		font-size: 1em;


	& > div p
		margin: 0;
		padding: 10px 0;
		
	
	



.slide_from_bottom .md_content
	transform: translateY(200%)
	opacity: 0
	transition: all 0.3s ease-out

.md_show.slide_from_bottom .md_content
	transform: translateY(0)
	opacity: 1