DARK_PERCENTAGE = 5

.button
	border-radius: 2px
	text-align: center
	display: block
	color: white
	letter-spacing: 0.04em
	font-size: 0.9em
	padding: 10px
	padding-top: 9px
	height: 39px
	box-shadow: inset 0px -3px 1px rgba(0, 0, 0, 0.15), 0px 2px 2px rgba(0, 0, 0, 0.05)
	position: relative
	transition: background-color .1s linear	
	
	&.no_shadow
		box-shadow: none	

	&.facebook
		background-color: #2e5d94
		
	&.soundcloud
		background-color: #ff5224
		
	&.google
		background-color: #F91616
		
	&.signin
		background-color: #2095cf
		
	&.half
		display: inline-block
		width: 48%
		
	&.yellow_button
		background-color : YELLOW
		color: BLACK
		font-weight: 800
		
	&.white_transparent_button
		background: transparent
		border: 1px solid white
		color: white
	
	&.small_button
		font-size: .75em
		padding: 10px
		

.no_touch_device
	.button.facebook:hover
		background-color: darken(#2e5d94, DARK_PERCENTAGE)
		
	.button.soundcloud:hover
		background-color: darken(#ff5224, DARK_PERCENTAGE)
		
	.button.google:hover
		background-color: darken(#F91616, DARK_PERCENTAGE)	

	.button.signin:hover
		background-color: darken(#2095cf, DARK_PERCENTAGE)
		
	.button.yellow_button:hover
		background-color : BLACK
		color: YELLOW
		border: 1px solid YELLOW
	
	.button.white_transparent_button:hover
		background: white
		color: BLACK
		
		
.buttons_flex
	display: flex
	justify-content: space-around
	flex-flow: row wrap
	& > *
		
		width: 47%;  
		margin: 0px 1% 10px; 

.middle_line
	text-align: center
	position: relative
	margin: 40px 0
	open_bold()
	color: #99999c
	span
		display: inline-block
		&:before, &:after

			border-top: 1px solid #e5e5e5
			display: block
			height: 1px
			content: " "
			width: 45%
			position: absolute
			left: 0
			top: 50%

		&:after
			right: 0  
			left: auto 
			
input
	display: block
	border: none
	background: #dedede
	color: BLACK
	border-radius: 3px
	margin-bottom: 20px
	width: 100%
	font-size: 0.9em
	padding: 10px 15px
	&::-webkit-input-placeholder 
	&:-moz-placeholder 
	&::-moz-placeholder
	&:-ms-input-placeholder 
		color: #A9A9A9
		
	&.dark_input
		background-color: lighten( #2c2c2c, 5 )
		color: white
		font-size: 0.7em;
		padding: 6px;
		border-radius: 5px;
		transition: width .3s ease-out, background-color .3s linear
		
		&:focus
			outline: 0;
			width: 150%
			background-color: lighten( #2c2c2c, 10 )
		
.hover_object
	.normal_state
		display: block
		
	.hover_state
		display: none
		
	&.hovered
		.normal_state
			display: none
			
		.hover_state
			display: block


.black_box
	position: absolute
	padding: 20px
	
	width: 36%
	min-width: 400px
	text-align: left
	color: white
	z-index: 0
	h1
		font-weight: 400
		line-height: 32px
		margin-bottom: 30px
	p
		font-weight: 300
		font-size: 1em
		margin-bottom: 20px
		
	.content
		position: relative
		z-index: 1
	.background
		border-radius: 3px
		absolute top 0 left 0
		width: 100%
		height: 100%
		background: #292C2F
		opacity: 0.9
		
	&.opaque
		.background
			opacity: 1
			
.hover_dropdown_trigger
	position: relative
	cursor: pointer
	
.hover_dropdown
	position: absolute
	right: 0
	background: #222
	color: GRAY
	font-size: .85em
	width: 140px
	display: none
	top: 100%
	box-shadow: 1px 1px 16px -2px #000
	li
		border-bottom: 1px solid GRAY_3
	a
		padding: 9px 14px
		display: block
		
	&.hovered
		display: block
		
.no_touch_device
	.hover_dropdown
		li:hover
			color: white
