DARK_PERCENTAGE = 5

.button
	border-radius: 2px
	text-align: center
	display: block
	color: white
	letter-spacing: 0.04em
	font-size: 0.9em
	padding: 10px
	padding-top: 9px
	height: 39px
	
	position: relative
	transition: background-color .1s linear	
	cursor: pointer
	
	&.shadow
		box-shadow: inset 0px -3px 1px rgba(0, 0, 0, 0.15), 0px 2px 2px rgba(0, 0, 0, 0.05)
		
	&.save_button
		background: BLUE
		color: white
		font-size: .8em
		
	&.green_button
		background: GREEN
		color: white
		
	&.red_button
		background: RED
		color: white

	&.facebook
		background-color: #2e5d94
		
	&.soundcloud
		background-color: #ff5224
		
	&.google
		background-color: #dc4b38
		
	&.signin
		background-color: #2095cf
		
	&.half
		display: inline-block
		width: 48%
	
	&.gray_button
		background-color: #383838

	&.yellow_button
		// background-color : YELLOW
		background-image: linear-gradient(180deg, rgb(255, 200, 10) 11%, rgb(245, 190, 0) 42%, rgb(229, 177, 0) 73%)
		color: BLACK
		font-weight: 800
		border: 1px solid #E9AC1A
		
	&.white_transparent_button
		background: transparent
		border: 1px solid white
		color: white
	
	&.small_button
		font-size: .75em
		padding: 10px
		font-weight: 600
		
	&.small_button_2
		font-size: .75em
		padding: 7px 10px
		height: 32px
		font-weight: 600
		
	&.small_button_3
		font-size: 0.8em
		padding: 9px 40px 10px
		font-weight: 600
		
		
	&.social
		padding-left: 50px
		width: 300px
		padding-top: 20px
		height: auto
		padding-bottom: 20px
		padding-right: 26px
		font-size: 1.1em
		letter-spacing: .03em
		span.spritesheet
			margin-right: 10px
			position: absolute
			left: 26px
			top: 50%
			transform: translateY(-50%)
		span
			vertical-align: middle
			display: block
			text-align: right
		

.no_touch_device
	.button.facebook:hover
		background-color: darken(#2e5d94, DARK_PERCENTAGE)
		
	.button.soundcloud:hover
		background-color: darken(#ff5224, DARK_PERCENTAGE)
		
	.button.google:hover
		background-color: darken(#dc4b38, DARK_PERCENTAGE)	

	.button.signin:hover
		background-color: darken(#2095cf, DARK_PERCENTAGE)
		
	.button.gray_button:hover
		background-color: lighten( #383838, 10 )
		
	.button.save_button:hover
		background: darken( BLUE, DARK_PERCENTAGE )
		
	.button.green_button:hover
		background: darken( GREEN, DARK_PERCENTAGE )
		
	.button.red_button:hover
		background: darken( RED, DARK_PERCENTAGE )
		
	.button.yellow_button:hover
		background-image: linear-gradient(180deg, rgb(0, 0, 0) 11%, rgb(0, 0, 0) 42%, rgb(0, 0, 0) 73%)
		color: YELLOW
		border: 1px solid YELLOW
	
	.button.white_transparent_button:hover
		background: white
		color: BLACK
		

		
.buttons_flex
	display: flex
	justify-content: space-around
	flex-flow: row wrap
	& > *
		
		width: 47%  
		margin: 0px 1% 10px 

.middle_line
	text-align: center
	position: relative
	margin: 40px 0
	open_bold()
	color: #99999c
	span
		display: inline-block
		&:before, &:after

			border-top: 1px solid #e5e5e5
			display: block
			height: 1px
			content: " "
			width: 45%
			position: absolute
			left: 0
			top: 50%

		&:after
			right: 0  
			left: auto 
			
input, textarea
	display: block
	border: none
	background: #dedede
	color: BLACK
	border-radius: 3px
	margin-bottom: 20px
	width: 100%
	font-size: 0.9em
	padding: 10px 15px
	&::-webkit-input-placeholder 
	&:-moz-placeholder 
	&::-moz-placeholder
	&:-ms-input-placeholder 
		color: #A9A9A9
		
	&.white_textarea
		background: white
		border: 1px solid #A9A9A9
		height: 100px
		
	&.dark_input
		background-color: lighten( #2c2c2c, 5 )
		color: white
		font-size: 0.7em
		padding: 6px
		border-radius: 5px
		margin: 0
		transition: width .3s ease-out, background-color .3s linear
		
		&:focus
			outline: 0
			width: 150%
			background-color: lighten( #2c2c2c, 10 )
			
.squared_input
	background: none
	border-radius: 0px
	border: 1px solid OUTLINE_COLOR
	
		
.hover_object
	.normal_state
		display: block
		
	.hover_state
		display: none
		
	&.hovered
		.normal_state
			display: none
			
		.hover_state
			display: block


.black_box
	position: absolute
	padding: 20px
	
	width: 36%
	min-width: 400px
	text-align: left
	color: white
	z-index: 0
	h1
		font-weight: 400
		line-height: 32px
		margin-bottom: 30px
	p
		font-weight: 300
		font-size: 1em
		margin-bottom: 20px
		
	.content
		position: relative
		z-index: 1
	.background
		border-radius: 3px
		absolute top 0 left 0
		width: 100%
		height: 100%
		background: #292C2F
		opacity: 0.9
		
	&.opaque
		.background
			opacity: 1
			
.hover_dropdown_trigger
	position: relative
	cursor: pointer
	
.hover_dropdown
	position: absolute
	right: 0
	background: #222
	color: GRAY
	font-size: .85em
	width: 140px
	display: none
	top: 100%
	box-shadow: 1px 1px 16px -2px #000
	li
		border-bottom: 1px solid GRAY_3
	a
		padding: 9px 14px
		display: block
		
	&.hovered
		display: block
		
.black_background
	position: relative
	display: inline-block
	color: white
	background: rgba(0,0,0,0.7)
	padding: 5px
	&.hidden
		opacity: 0
	
.outline_box
	border: 1px solid OUTLINE_COLOR
	border-bottom: 2px solid OUTLINE_COLOR
	border-radius: 5px
	overflow: hidden
		
.outline_icon
	display: block
	border: 1px solid OUTLINE_COLOR
	border-radius: 3px
	width: 38px
	height: 38px
	text-align: center
	
	.spritesheet
		absolute left 50% top 50%
		transform: translateY(-50%) translateX(-50%) 
		
		
.button_with_icon
	background: #E5E9E8
	color: BLACK
	border: 1px solid #9DACA9
	border-radius: 4px
	font-size: .8em
	line-height: .85em
	vertical-align: top
	padding: 0 10px 10px 6px
	
	&.black_button
		padding: 8px 30px 17px
		color: #ABA9A9
		font-size: .9em
		font-weight: 800
		background: rgba(0,0,0,0.8)
	
	span
		display: inline-block
		
	span.spritesheet
		position: relative
		top: 4px
		margin-right: 5px

.upload_wrapper
	position: relative
	overflow: hidden
	.upload_element
		position: relative
		z-index: 0
		.progress
			position: absolute
			bottom: 0
			left: 0
			width: 0%
			transition: width .3s linear, opacity .3s linear
			background: GRAY_1
			height: 3px
			z-index: 2
			border-bottom-left-radius: 3px
			border-bottom-right-radius: 3px
			
			&.hide
				opacity: 0
	.cloudinary_form
		position: absolute
		bottom: 0
		right: 0
		z-index: 1
		cursor: pointer
		input[type=file]
			font-size: 20px
			display: block
			height: 50px
			direction: ltr
			cursor: pointer
			opacity: 0
			margin: 0

.editable_text
	position: relative
	cursor: pointer
	.text
		position: relative
		z-index: 0
		
	input
		position: absolute
		top: 0
		left: 0
		background: none
		outline: none
		display: none
		z-index: 1
		
	select
		absolute top 0 left 0
		width: 100%
		height: 100%
		opacity: 0
		cursor: pointer

		
	.spritesheet
		absolute top 50% right -30px
		transform: translateY(-50%)
		display: none
		
	&.edit_mode
		input
			display: block
			
		.spritesheet
			display: block
			
		.text
			opacity: 0

.start_stop
	.start
		display: block
	.stop
		display: none
		
	&.started
		.start
			display: none
		.stop
			display: block

.no_touch_device
	.editable_text:hover
		.spritesheet
			display: block
			
	.underline_link:hover
		text-decoration: underline
	.hover_dropdown
		li:hover
			color: white
			
	.outline_icon:hover
		border-color: GRAY_2
		
	.button_with_icon:hover
		&.black_button
			color: GRAY
			background: BLACK
			

