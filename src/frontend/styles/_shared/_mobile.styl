body
  min-width: 320px
  
.for_mobile
  display: none
  
.homepage_mobile_screen
  padding: 60px 40px 80px
  width: 100%
  position: relative
  background-size: cover
  background-position: center center

.mobile_header
  height: 55px
  background: BLACK
  width: 100%
  top: 0
  left: 0
  border-bottom: 2px solid YELLOW
  color: white
  position: fixed
  z-index: 2
  align-items: center
  justify-content: center
  a
    flex: 1
    text-align: center
    span
      position: relative
      top: 2px
      
.dynamic_wrapper
  position: relative
  

@media (max-width: 700px)
  
  body
    
    .dynamic_wrapper
      background: #ececec
      transition: transform .3s ease-out
      transform: translate3d(0, 0, 0)
      &.moving
        position: absolute
        top: 0
        left: 0
        width: 100%
        
        transform: translate3d(-100%, 0, 0)
      &.moved
        transform: translate3d(0, 0, 0)

    #loading
      position: fixed
      z-index: 1
      opacity: .5

    .for_mobile
      display: block
      
    .for_desktop
      display: none
      
    .parallax-mirror
      display: none
      
    .mobile_header
      display: flex

   
      
    .black_box
      position: relative
      margin: 0px auto
      width: 100%
      min-width: inherit
      max-width: 300px
      h1
        line-height: 23px
        font-size: 1.5rem
        margin-bottom: 20px
      p
        font-size: 1rem
        line-height: 25px
        
      .button
        width: 100%!important
        
        
      
    .buttons .right
      float: none
      
    .secondary_screen .black_box
      right: auto
      top: auto
      h1
        line-height: 23px
        
      p
        padding: 0
        font-weight: inherit
        line-height: inherit
        
      
    