.mobile_header
  height: 55px
  background: rgba(41,44,47,0.99) 
  width: 100%
  top: 0
  left: 0
  font-size: 22px
  border-bottom: 2px solid YELLOW
  color: #818181
  position: fixed
  z-index: 4
  align-items: center
  justify-content: center
  transition: transform .1s ease-out
  
  &.hide
    transform: translate3d(0, -55px, 0)
