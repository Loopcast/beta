    margin-left: -5px
    margin-right: 5px
    
  .ss-search
    position: relative
    margin-left: 10px
    margin-right: -10px
      
.dynamic_wrapper
  position: relative
  
.mobile_dropdown
  transform: translate3d(0,-100%,0)
  transition: transform .3s ease-out

.mobile_dropdown_opened    
