header
	
	position: fixed
	width: 100%
	top: 0
	left: 0
	color: white
	height: 42px
	z-index: 3
	.background
		absolute top 0 left 0
		width: 100%
		height: 100%
		z-index: 1
		background: BLACK
		
	.centered
		position: relative
		z-index: 1
	.centered.second
		z-index: 0
		
	.left, .right
		& > *
		
			display: inline-block
			padding: 9px 14px
			vertical-align: top
			
			&.settings
				padding-top: 10px
				padding-bottom: 0
				cursor: pointer
				span
					transition: transform .1s linear
					
				&.hovered
					span
						transform: rotate(360deg)	
	.left
		float: left
		& > *
			border-right: 1px solid #333
		
	.right
		float: right
		position: relative
		
	.settings_dropdown
		position: absolute
		top: 100%
		right: 0
		background: #222
		color: GRAY
		font-size: .85em
		width: 140px
		transition: transform .3s ease-out
		transform: translateY(-140%)
		li
			border-bottom: 1px solid GRAY_3
		a
			padding: 9px 14px
			display: block
			
		&.hovered
			transform: translateY(0%)
		

		

.no_touch_device
	header 
		.settings_dropdown
			li:hover
				color: #222
				background: GRAY
				border-bottom: 1px solid GRAY

footer
	background: BLACK
	text-align: center
	color: white
	z-index: 0
	position: relative