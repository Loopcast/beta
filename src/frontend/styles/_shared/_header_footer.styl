header.header
  transition: opacity .3s linear  
  position: fixed
  backface-visibility: hidden
  width: 100%
  top: 0
  left: 0
  color: white
  height: HEADER_HEIGHT
  z-index: 3
  user-select: none
  
  .header_shadow_item
    transition: box-shadow .2s linear
  
  .background
    absolute top 0 left 0
    width: 100%
    height: 100%
    z-index: 1
    background: HEADER  
    
  .centered
    position: relative
    z-index: 1
  .centered.second
    z-index: 0
    
  .left, .right
    & > *
    
      float: left
      padding: 16px 22px
      vertical-align: top
      height: HEADER_HEIGHT
      text-transform uppercase
      border-right: 1px solid #1f1f1f
      border-left: 1px solid #353535
      font-size 0.9375rem
      // transition border 0.3s
      
      &.settings
        padding-top: 16px
        padding-bottom: 0
        cursor: pointer
        height: HEADER_HEIGHT
        position: relative
        border-right none
        margin-left -4px
        .ss-settings
          transition: transform .1s linear
          display: block
          transform-origin: 49.5% 51%
          text-align: center
          width: 22px
          height: 22px
          display: inline-block
          font-size: 1.2em
          color: #ccc
            
          
        // &.hovered
        //  .ss-settings
        //    transform: rotate(180deg)
            
        .ss-settings:hover  
          color:white

  .beta-label
    text-transform uppercase
    position relative
    
    top 8px
    left 1px
    font-size 10px
    font-weight bold
    color BRANDING
    letter-spacing: 3px
    padding-left 2px
    background-color rgba( 255, 255, 255, 0.1)
    border-radius 2px
            
  .menu_item
    position: relative
    &:after
      content: ""
      position: absolute
      bottom: 0
      left: 0
      width: 100%
      height: 0px
      background: BRANDING
      transition: height .1s ease-out
    &.selected:after
      height: 3px
    &.selected.homepage_item:after
      height: 0
      
  .left
    float: none
    & > *
      
      padding: 16px 25px
      
      &:first-child
        border-left: none
      &.no_border
        border-right: none
    
  .right
    float: none
    position: absolute
    top: 0
    right: 0
    border-left 1px solid #1f1f1f;
    & > *
      float: none
      display: inline-block
    
  .settings_dropdown
    width: 154px
    text-transform none
    
  
  // .separate_buttons
  //   display none
  
  .search_box
    position: relative
    padding-left: 56px
    .icon
      position: absolute
      top: 19px
      left: 25px
    form
      display: inline-block
      
    ::-webkit-input-placeholder /* WebKit, Blink, Edge */
      text-transform uppercase
    :-moz-placeholder /* Mozilla Firefox 4 to 18 */
       text-transform uppercase
    ::-moz-placeholder /* Mozilla Firefox 19+ */
       text-transform uppercase
    :-ms-input-placeholder /* Internet Explorer 10-11 */
       text-transform uppercase
    :placeholder-shown /* Standard (https://drafts.csswg.org/selectors-4/#placeholder) */
      text-transform uppercase
      
  .menu_logo
    padding-top 14px

  .user_logged
    display: none
    padding: 0
    & > *
      display: inline-block
      vertical-align: middle
    .thumb_wrapper
      padding-left 26px
      padding-right: 30px
      // margin-right: 20px
      position: relative
      height: HEADER_HEIGHT
      .rounded_top_bar
        width: 28px
        height: 28px
        border-radius: 2px
        overflow: hidden
        position: relative
        margin-top: 13px
      span
        position: absolute
        top: 42%
        right: 10px
        font-size: 0.6em
      &.hovered
        span
          top: 36%
          transform: rotate(180deg)
        
  .user_dropdown
    text-transform none
    right: 0px
    
  .ss-dropdown 
    color:#ccc
  
  .ss-dropdown:hover
    color: white  
    
  .ss-mail
    display: block
    position: relative
    top: 3px
    font-size: 1.2em
    color: #ccc
    
  .ss-mail:hover
    color:white 
  
.first_loaded
  header
    opacity: 1  
.logged
  header
    .user_logged
      display: inline-block
    .login_link
      display: none

.unfixed
  padding-top: 0
  header
    position: relative


.no_touch_device
  .header_shadow_item.selected
    box-shadow: inset 0 0 10px rgba(0,0,0,.4)
  .header_shadow_item:hover
    box-shadow: inset 0 0 10px rgba(0,0,0,.2)
    
// New home page header
header.for_desktop
  .background
    opacity 1
    transition opacity 0.3s

.homepage_page
  padding-top 0
  
  header.for_desktop.top
    // padding 5px 0
    // height auto
    // transition all 0.3s
    
    .background
      opacity 0
      transition opacity 0.3s
      
    .left > *, .right > *
      border-color transparent
      
    .header_shadow_item
      box-shadow none

    .search_box
      padding-left 0
      margin-top -4px
      transition: all 0.3s
      &.focus
        margin-right 100px
      form
        position relative
      .icon
        top 7px
        left 12px
        background transparent
      input[type="text"]
        padding 7px 7px 7px 38px
        font-size 1rem
        background rgba(51,51,51,0.79)
        transition all 0.3s
        
        &.focus, &:focus, &:active
          width 150%
          background rgba(51,51,51,1)
          
      ::-webkit-input-placeholder /* WebKit, Blink, Edge */
        color white
        text-transform uppercase
      :-moz-placeholder /* Mozilla Firefox 4 to 18 */
         color white
         opacity 1
         text-transform uppercase
      ::-moz-placeholder /* Mozilla Firefox 19+ */
         color white
         opacity 1
         text-transform uppercase
      :-ms-input-placeholder /* Internet Explorer 10-11 */
         color white
         text-transform uppercase
      :placeholder-shown /* Standard (https://drafts.csswg.org/selectors-4/#placeholder) */
        color white
        text-transform uppercase

    .sign_up_link
      height auto
      margin-top 10px
      padding 6px 22px
      color white
      border-radius 6px
      background BRANDING
      
    .login_link
      border-left-color transparent
      
    .right
      border-left-color transparent
      
    // Settings&user dropdown
    .settings_dropdown, .user_dropdown
      background transparent
      box-shadow none

      li
        border-bottom none
        &:hover
          box-shadow none


.logged .header .sign_up_link
  display none
  

footer
  background: BLACK
  text-align: center
  color: white
  z-index: 0
  position: relative
  
