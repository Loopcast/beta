#confirm-username
  width 330px
  margin 0 auto
  text-align center

.avatar
  width 144px
  margin 46px 0
  border-radius: 72px

.input-group
  margin-top 32px
  
  span, input
    width 50%
    height 40px
    border 1px solid #bebdbd

  span
    padding 10px 15px
    font-size 0.9rem
    border-radius: 3px 0 0 3px
    
  input
    margin-bottom 0
    background-color #fff
    border-left: none
    border-radius 0 3px 3px 0
    
.error-box
  opacity 0
  min-height 44px
  padding 10px 0
  transition opacity 0.3s
  
  &.error
    opacity 1
  
  p
    font-size 0.9rem
    color #ff696c

.yellow_button
  min-width 270px
  margin 0 auto
