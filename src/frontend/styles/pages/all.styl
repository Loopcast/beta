@import '../_shared/_bootstrap.styl'

// STYLEGUIDE
.styleguide
  padding: 20px
  text-align: left
  .buttons_wrapper, .loading_wrapper
    & > *
      display: inline-block
      margin-right: 10px
      margin-bottom: 10px
    
  .loading_wrapper
    background: white
    padding: 10px
    border: 1px solid #ccc
    
  .tags_wrapper
  .loading_wrapper
    width: 50%
    margin: 10px
    vertical-align: top
    
  .tags_wrapper
    background: BLACK
    color: GRAY
    padding: 10px


// NOTIFY
body
  .notifyjs-container > div
    background-image: none
    padding-left: 15px
    background: SHARE_BOX
    color: white
    border-color: SHARE_BOX
    font-size: 0.9rem
    font-weight:600
    text-shadow: none
    width: 260px
    padding: 15px
    border-radius: 3px
    position: relative
    .icon
      margin-right: 10px
      position: relative
      top: 2px
    a
      color: BLUE
      text-decoration: underline
    
    .close-notify
      position: absolute
      top: -4px
      right: -4px
      background: rgba(0,0,0,0.9)
      border-radius: 50%
      color: white
      display: block
      width: 22px
      height: 22px
      text-align: center
      font-weight: bold
      padding-top: 2px
      cursor: pointer
      
  .notifyjs-corner 
    margin-right: 20px
    margin-top: 50px
    .notifyjs-wrapper, .notifyjs-container
      margin-bottom: 12px
      
  &.is_guest .notifyjs-container .icon.ss-alert
    display: inline-block!important
      

