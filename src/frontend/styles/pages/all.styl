@import '../_shared/_bootstrap.styl'

// STYLEGUIDE
.styleguide
	padding: 20px
	text-align: left
	.buttons_wrapper, .loading_wrapper
		& > *
			display: inline-block
			margin-right: 10px
			margin-bottom: 10px
		
	.loading_wrapper
		background: white
		padding: 10px
		border: 1px solid #ccc
		
	.tags_wrapper
	.loading_wrapper
		width: 50%
		margin: 10px
		vertical-align: top
		
	.tags_wrapper
		background: white
		color: GRAY
		padding: 10px

// CREATEROOM
.profile_theme.createroom
	.cover
		border-bottom: none
		

.source_controls
	width: 220px
	
	input, select
		display: block
		width: 100%
.dashboard_bar
	color: white
	height: 100px
	width: 100%
	background: url("/images/dashboard_gradient.png")
	text-align: left
	padding: 20px
	
	& > *
		display: inline-block
		margin-right: 20px
