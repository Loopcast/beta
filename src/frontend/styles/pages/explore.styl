@import '../_shared/_bootstrap.styl'

HEIGHT_SUBHEADER = 45px
GRAY_SUBHEADER_BORDER = #d5d4d4


// preloading
body.loading
  .explore
    height: 100vh
    background #262626
  .explore_content
    opacity 0


.explore_page
  &, #content, .dynamic_wrapper
    background #262626
    
  .main_title
    font-family 'Lato', sans-serif
    font-weight normal

.circle_icon
  color: white
  background: rgba(PLAY_BUTTON_COLOR,PLAY_BUTTON_COLOR,PLAY_BUTTON_COLOR,0.6)
  width: PLAY_BUTTON_W
  height: PLAY_BUTTON_W
  text-align: center
  padding-top: 14px
  padding-left: 7px
  font-size: 28px
  border-radius: 50%
  absolute left 50% top 50%
  transform: translateX(-50%) translateY(-50%)
  
  &.ss-pause
    font-size: 24px
    padding-left: 1px
    padding-top: 16px
    

  
.player_preview
  .share_wrapper
    absolute top 5px right 5px
    opacity: 0
    transition: opacity .2s linear
    
  .loading_spin
      position: absolute
      opacity: 0
      top: 50%
      left: 50%
      transform: translateX(-50%) translateY(-50%)
      
  &.preloading
    .loading_spin
      opacity: 1
    

.explore
  position: relative
  padding-top: HEIGHT_SUBHEADER
  .no_result_explore
    .no_result
      display: block
      
    .flex_sidebar, .flex_content
      display: none
      
  h2
    color white

  .no_result
    text-align: center
    font-size: 1.2rem
    color: BLACK
    flex: 1
    padding-top: 50px
    display: none
    

  .loading
    absolute top 0 left 0
    width: 100%
    height: 100%
    background: #ececec
    z-index: 0
    transition: opacity .3s linear
    opacity: 0
    
  .explore_content > .loading
    top: 45px
  
        
  .explore_content
    padding-top: SIDE_PADDING * 2
    padding-left: SIDE_PADDING
  

  MARGIN_GRID = 30px
      
    
  .rooms_grid
    .inner
      position: relative
      width: 100%
      height: 100%
      z-index: 0
      overflow: hidden
    .room_cell
      width: 210px
      text-align: left
      margin-bottom: MARGIN_GRID
      position: relative
      
      
      &.not_live
        .room_location
          margin-bottom: 7px
        
      .room_content
        padding: 10px 5px 5px
        word-wrap: break-word
        
        .text .ss-play
          font-size: .8em
          position: relative
          padding-left: 1px
        
      .text
        padding: 0 5px
      
      .thumb_wrapper
        position: relative
        display: block
        overflow: hidden
      & > .thumb_wrapper
        width: 200px
        height: 200px
        
      .room_thumb
        width: 100%
        display: block
        
        
      h2
        color: #E0E0E0
        font-size: 1em
        font-weight: 800
        line-height: 1.3em
        margin-bottom: 2px
        font-weight: 600
      
      h2:hover 
        color: black 
        
      .room_subtitle
        font-size: 0.8em
        line-height: 1em
        display: block
        margin-bottom: 15px
        font-weight: 600
        &.blue
          color: BLUE
          font-weight: 400
          
      .genres
        margin-bottom: 7px
          
      .likes, .plays
        .text
          position: relative
          top: -1px
          margin-left: 0
      .room_location
        text-transform: capitalize
        color: GRAY_4
        font-size: .8em
        margin-bottom: 15px
        .icon
          position: relative
          top: 2px
          margin-right: 3px
          
    
        

.share_set, .like_set
  margin: 9px 4px
  color: GRAY_4

.share_set
  top: 2px
  position: relative
  left: 2px

.like_set
  border-radius: 50%
  width: 30px
  height: 30px
  text-align: center
  padding-top: 7px
  position: relative
  top: -1px
  left: -1px
  
  
.following_item
  display: none
  
.following
  .not_following_item
    display: none
  .following_item
    display: block
    

.player_preview
  .circle_icon
    opacity: 0
    transition: opacity .2s linear
  &.playing
  &.preloading
    .circle_icon
      opacity: 1  



.loading_on_top
  &.tab_1 .explore_content > .loading
  &.tab_filter .rooms_grid .loading
    z-index: 1
.loading_visible 
  &.tab_1 .explore_content > .loading
  &.tab_filter .rooms_grid .loading
    opacity: 1
    
    

.no_touch_device
  .explore
    .room_cell:hover
      .share_set, .like_set
        color: GRAY_2
        
      .like_set:hover
        background: GRAY_2
        color: white
        
  .explore .rooms_grid .room_cell .room_subtitle:hover
    text-decoration: underline
        
  .explore .rooms_grid .room_cell .room_location:hover
    color: GRAY_2
        
  .player_preview:hover
    .circle_icon
      opacity: 1
      
    .share_wrapper
        opacity: 1
        
        
  
  .circle_icon:hover
    background: rgba(PLAY_BUTTON_COLOR,PLAY_BUTTON_COLOR,PLAY_BUTTON_COLOR,0.7)


  
@media (max-width 767px)
  .explore_page
    .loading
      top 0
    .swiper-wrapper
      display block
      max-width 300px
      margin 0 auto
    .explore 
      .explore_content
        padding-top 20px
      .rooms_grid .room_cell
        border-bottom none
    .main_title, .arrows
      display none
        
@media (max-width 320px)
  .explore_page
    .swiper-wrapper
      max-width 280px

      
// tablet and up
@media (min-width 768px)
  .explore_page
    .container
      max-width 1140px
    #content
      height calc(100vh - 55px)
    .explore
      padding-top 0
    .main_title
      margin 72px auto 36px
      max-width 510px
    .explore_content
      padding 0 20px
    .arrows, .pagination
      display inline-block
      float right
      margin-bottom 20px
    .pagination
      margin 19px 19px 0 0
    .nextSlide
      margin-left 20px
    .swiper-container
      clear both
    .rooms_grid
      .room_cell
        margin-bottom 10px
    .swiper-slide
      display flex
      flex-direction row
      flex-wrap wrap
      
      .room_cell
        width 18.4%
        margin-left 2%
        &.first-inline
          margin-left 0%
        & > .thumb_wrapper
          width 100%
          height auto
          box-sizing border-box
          display inline-block
          position relative
          &:before
            content ""
            display block
            margin-top 100%
          img
            position absolute
            top 0
            bottom 0
            left 0
            right 0
            &.for_mobile
              display none
