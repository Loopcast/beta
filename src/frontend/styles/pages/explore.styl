.no_touch_device
  .explore
    .sub_header li:hover
      color: BLACK
    .genres_list
      a:hover
        background:  #747C83
        color: #dedede
    .room_cell:hover
      .share_set, .like_set
        color: GRAY_2
        
      .like_set:hover
        background: GRAY_2
        color: white
        
  .explore .rooms_grid .room_cell .room_subtitle:hover
    text-decoration: underline
        
  .explore .rooms_grid .room_cell .room_location:hover
    color: GRAY_2
        
  .player_preview:hover
    .circle_icon
      opacity: 1
      
    .share_wrapper
        opacity: 1
        
        
  
  .circle_icon:hover
    background: rgba(PLAY_BUTTON_COLOR,PLAY_BUTTON_COLOR,PLAY_BUTTON_COLOR,0.7)
  

      