@import '../_shared/_bootstrap.styl'

.homepage
	position: relative
	.black_box
		
		position: absolute
		top: 11%
		left: 24%
		padding: 60px 30px 15px
		
		width: 36%
		min-width: 400px
		text-align: left
		color: white
		z-index: 0
		.content
			position: relative
			z-index: 1
		.background
			border-radius: 3px
			absolute top 0 left 0
			width: 100%
			height: 100%
			background: #292C2F
			opacity: 0.9
			

		.spritesheet
			margin-bottom: 20px
		h1
			font-weight: 400
			line-height: 32px
			margin-bottom: 30px
		p
			font-weight: 300
			font-size: 1em
			margin-bottom: 20px
			
		.buttons
			overflow: hidden
			.button
				width: 48%
				
	.scroll_down
		absolute bottom 30px left 0
		width: 100%
		text-align: center
		color: white
		p
			margin-bottom: 5px
			text-shadow: 1px 1px 1px black