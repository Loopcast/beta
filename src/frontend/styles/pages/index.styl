@import '../_shared/_bootstrap.styl'

.parallax-container
	height: 100%

.parallax-mirror
	transition: opacity .3s linear
	&.hide
		opacity: 0
.black_box
	max-width: 600px
.landing
	position: relative
	.black_box
		min-width: 450px
		
		padding: 60px 30px 15px
		top: 11%
		left: 24%			

		.spritesheet
			margin-bottom: 20px
		
			
		.buttons
			overflow: hidden
			.button
				width: 48%
				
	.scroll_down
		absolute bottom 30px left 0
		width: 100%
		text-align: center
		color: white
		p
			margin-bottom: 5px
			
		p, span
			text-shadow: 1px 1px 1px black
			
.secondary_screen
	.black_box
		text-align: center
		right: 10%;
		top: 30%;
		
		h1
			color: YELLOW
			line-height: 45px
			
		p
			padding: 0 23px
			// font-size: 0.9em
			font-weight: 400
			line-height: 1.6em
			
		.button
			width: 50%
			max-width: 280px
			margin: 0 auto
			
.landing_3
	.black_box
		right: auto
		left: 50%
		top: 20%
		width: 50%
		transform: translateX(-50%)
		
@media (max-height: 600px)
	.landing .black_box
		padding-top: 30px
		.spritesheet
			transform: scale(.7,.7)
			position: relative
			left: -16px
			margin-bottom: 0
		
		h1
			line-height: 28px;
			margin-bottom: 20px;
			font-size: 1.8rem;

	