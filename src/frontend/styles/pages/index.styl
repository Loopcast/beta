@import '../_shared/_bootstrap.styl'

.landing
	position: relative
	.black_box
		min-width: 450px
		padding: 60px 30px 15px
		top: 11%
		left: 24%			

		.spritesheet
			margin-bottom: 20px
		
			
		.buttons
			overflow: hidden
			.button
				width: 48%
				
	.scroll_down
		absolute bottom 30px left 0
		width: 100%
		text-align: center
		color: white
		p
			margin-bottom: 5px
			text-shadow: 1px 1px 1px black
			
.secondary_screen
	.black_box
		text-align: center
		right: 10%;
		top: 30%;
		
		h1
			color: YELLOW
			line-height: 45px
			
		p
			padding: 0 23px
			font-size: 0.9em
			font-weight: 400
			line-height: 1.6em
			
		.button
			width: 50%
			max-width: 280px
			margin: 0 auto
			
.landing_3
	.black_box
		right: auto
		left: 50%
		top: 20%
		width: 50%
		transform: translateX(-50%)
	