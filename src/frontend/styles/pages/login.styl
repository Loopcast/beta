@import '../_shared/_bootstrap.styl'

#login
	h4
		color: GRAY_2
		font-size: 1.15em
		text-align: center
		margin-bottom: 24px
		
	.facebook, .soundcloud
		display: inline-block
		width: 48%
		float: left
	
	.soundcloud
		float: right
	
	form
		position: relative
		.label_error
			position: absolute;
			top: -40px;
			left: 0;
			color: #f00;
			width: 100%;
			font-size: 11px;
			text-align: center;
			display: none
			
	div.error
		.label_error
			display: block