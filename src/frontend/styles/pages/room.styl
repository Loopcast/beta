@import '../_shared/_bootstrap.styl'

.profile_theme.createroom
  .cover
    border-bottom: none
    

    

.source_controls
  width: 220px
  
  input, select
    display: block
    width: 100%
    
.guest
  .dashboard_bar
    overflow: hidden
    height: 20px
    padding: 0
    & *
      display: none

.is_owner
  .room_ready
    .dashboard_bar
      height: 100px
      .centered
        display: block
     
#appcast_not_running_balloon
  width: 330px
  p
    margin-bottom: 30px
  
  a
    text-decoration: underline
    
  ul
    margin-bottom: 10px
    li
      margin-bottom: 7px
    a
      color: BLUE
      
  a.learn
    display: block
    text-align: right
    color: YELLOW 

.dashboard_bar
  color: white
  height: 8px
  width: 100%
  background: url("/images/dashboard_gradient.png")
  background: #24292d
  text-align: left
  padding: 12px
  

  
  &.appcast_running
    .appcast_not_running_message
      display: none
    
  &.appcast_not_running
    .appcast_not_running_message
      display: inline-block
      
    .appcast_running_message
      display: none
  
  .centered
    position: relative
    // overflow: hidden
    display: none
    
  .half
    float: left
    width: 50%
    padding: 0 1.5%
    
    &._left
      text-align: right
      .inner
        width: 222px
        display: inline-block
        overflow: hidden
        & > *
          float: right
          
      .appcast_running_message
      .appcast_not_running_message
        margin-bottom: 13px
        
      .meter_wrapper
        margin-bottom: 3px
      
    &._right
      text-align: left
    & > *
      margin-bottom: 7px
      
    br
      margin-bottom: 0
    
    .meter_wrapper
      margin-bottom: 0
  .left_part
  .right_part
    width: 150px
    
  .select_wrapper
    .button
      overflow: visible
    


// Chat System
.profile_content.chat
  min-height: 440px
  display: flex
  flex-direction: row
  padding: 0
  color: GRAY_2
  font-size: 0.8em
  line-height: 1.2em
    
  .chat_sidebar    
    width: 300px
    border-left: 1px solid #d5d5d5
    padding: 16px
    display: flex
    
    flex-direction: column
    .inner
      flex: 1
    h3
      text-transform: uppercase
      color: black
      font-weight: 600
      span
        color: BLUE
        
    h3
    .social
      padding-left: 5px

    .users
      text-align: left
      margin-top: 20px
    .img_wrapper
      display: inline-block
      overflow: hidden
      border-radius: 50%
      margin: 4px
      img
        display: block
        
    .spritesheet
      display: inline-block
      margin-right: 8px
      text-indent: -9999px
        
  .chat_main
    flex: 1
    flex-direction: column
    display: flex
    .chat_header
    .chat_footer
      position: relative
      overflow: hidden
      p
        width: 100%
      
    .chat_header
      height: 64px
      padding: 16px SIDE_PADDING
      
    .chat_content
      flex: 1
      border-bottom: 1px solid #d5d5d5
      border-top: 1px solid #d5d5d5
      padding: 30px SIDE_PADDING 0

            
      height    : 200px
      overflow-y: scroll
      
      &.no_chat_yet
        padding: 0
        display: flex
        align-items: center
        justify-content: center
        .no-message
          display: block
      
  .no-message
    display: none
    font-size: 2em
    text-align: center
    font-weight: 600
    line-height: 32px
    padding: 0 30px
    

  .message
    position: relative
    margin-bottom: 30px
    overflow: hidden
    
    &.show
      .inner
        transform: translate3d(0,0px, 0)  
    .inner
      padding-left: 58px
      padding-right: 58px
      transform: translate3d(0,-100px, 0)
      transition: transform .2s ease-out
      

    .headphone
      absolute top 0 right SIDE_PADDING
    
    .name
      color: #465059
      transition: color .1s linear
      margin-bottom: 4px
      span
        color: #B8BDC1
    
    .img_wrapper_2
      position: absolute
      top: 0
      left: 0
      width: 36px
      height: 36px
      text-align: center
      .icon
        color: RED
        font-size: 27px
        display: block
        line-height: 40px
      

    
  
      
    
    
  .chat_footer
    padding: 6px 60px 0
    
    .icon
      position: absolute
      top: 27px
      right: 20px
      font-size: 25px
      cursor: pointer
      display: block
      &.liked
        color: RED
      
    textarea
      position: relative
      top: -7px
      background: none
      outline: none
      font-size: 1.1em
      margin-bottom: 0
      PLACEHOLDER_COLOR = #7B7878
      
      &::-webkit-input-placeholder 
        color: PLACEHOLDER_COLOR
      &:-moz-placeholder
        color: PLACEHOLDER_COLOR  
      &::-moz-placeholder
        color: PLACEHOLDER_COLOR  
      &:-ms-input-placeholder   
        color: PLACEHOLDER_COLOR  
      
      

  .img_wrapper_2
    display: inline-block
    border-radius: 4px
    overflow: hidden
    absolute left SIDE_PADDING top 10px
    img
      display: block

    
    
.no_touch_device
  .profile_content.chat .chat_sidebar .spritesheet:hover
    opacity: 0.8
    
  .profile_content.chat .message .name:hover
    color: BLUE
    