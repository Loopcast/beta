@import '../_shared/_bootstrap.styl'
.profile
	background: white
	position: relative
	.cover
		height: 350px
		position: relative
		overflow: hidden
		border-bottom: 1px solid #999
		.cover_image
			absolute top 0 left 0
			width: 100%
			height: 100%
			background-size: cover
			background-position: 50% 50%
			z-index: 0
		.content
			z-index: 1
			absolute top 0 left 0
			width: 100%
			height: 100%
			text-align: left
			
		.name
			font-size: 2.5em
			margin-bottom: 3px
			font-weight: 600
			padding: 5px 10px 10px
			letter-spacing: 0.03em
			line-height: 1em
			margin-top: 3px
			color: GRAY
			
		.type, .genres
			font-size: 1em
			font-weight: 600
			color: #B5B5B5
			line-height: 0.9em
			
		.genres li
			display: inline-block
			

		.profile_image
			absolute bottom 0 left 50px
			width: 150px
			img
				box-shadow: 1px 1px 66px 3px #000
				display: block
				width: 100%
				
	.sidebar_right
		background: rgba(0,0,0,0.9)
		absolute top 0 right 0
		height: 100%
		text-align: center
		color: #B5B5B5
		padding: 30px 15px
	.big_number
		margin-bottom: 20px
		span
			display: block
			
			&.number
				font-size: 2.4em
				line-height: 1.1em;
				
			&.text
				font-size: .9em
				line-height: 1em;
				
	.profile_content
		padding: 40px 50px
		display: flex;
		text-align: left
		.profile_bio
			position: relative
			width: 290px
			margin-right: 50px
			padding: 13px 26px
			
			.outline_icon
				position: absolute
				top: 5px
				right: 10px
			h4
				font-size: 1.1em
				margin-bottom: 14px
			.bio
				color: GRAY_2
				font-size: 0.9em
				
		.social
			margin-top: 20px
			a
				display: inline-block
				margin-right: 20px
			
		.list_sessions
			flex: 1;
		
		.session
			height: 100px
			width: 100%
			margin-bottom: 40px
			display: flex;
			height: 170px
			.image
				width: 200px
				background-size: cover
				background-position: 50% 50%
			.content
				flex: 1
				padding: 16px 20px
			
			h2
				font-size: 1.3em
				line-height: 1em
				margin-bottom: 5px
				
			.session_author
				color: BLUE
				font-size: .9em
				margin-bottom: 10px
				display: block
			
			.genres
				margin-bottom: 15px
			.tag
				display: inline-block
				color: white
				background: #C1C7C6
				border-radius: 2px
				padding: 3px
				margin-right: 6px
				text-transform: uppercase
				font-size: .8em
				line-height: 0.9em
				
			.small_info
				color: GRAY_2
				& > *
					display: inline-block
					margin-right: 10px
					font-size: .8em
					span
						display: inline-block
						background: GRAY_2
						width: 10px
						height: 10px
						margin-right: 5px
		
				

			
		