@import '../_shared/_bootstrap.styl'
.profile
	background: white
	position: relative
	.cover
		height: 350px
		position: relative
		overflow: hidden
		border-bottom: 1px solid #999
		.cover_image
			absolute top 0 left 0
			width: 100%
			height: 100%
			background-size: cover
			background-position: 50% 50%
			z-index: 0
		.content
			z-index: 1
			absolute top 0 left 0
			width: 100%
			height: 100%
			text-align: left
			
		.name
			font-size: 2.5em
			margin-bottom: 3px
			font-weight: 600
			padding: 5px 10px 10px
			letter-spacing: 0.03em
			line-height: 1em
			margin-top: 3px
			color: GRAY
			
		.type, .genres
			font-size: 1em
			font-weight: 600
			color: #B5B5B5
			line-height: 0.9em
			
		.genres li
			display: inline-block
			

		.profile_image
			absolute bottom 0 left 50px
			width: 150px
			img
				box-shadow: 1px 1px 66px 3px #000
				display: block
				width: 100%
				
	.sidebar_right
		background: rgba(0,0,0,0.9)
		absolute top 0 right 0
		height: 100%
		text-align: center
		color: #B5B5B5
		padding: 30px 15px
	.big_number
		margin-bottom: 20px
		span
			display: block
			
			&.number
				font-size: 2.4em
				line-height: 1.1em;
				
			&.text
				font-size: .9em
				line-height: 1em;
		