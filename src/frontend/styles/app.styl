// --------------------------------------------
// General Layout
body
	background: GRAY
	color: BLACK
	font-size: 100%
	open_sans()
	
	// Pull the content down because of the header fixed
	padding-top: HEADER_HEIGHT
		
#content
	text-align: center
	position: relative
	z-index: 1
	
.player_visible
	#content
		padding-bottom: 70px
	
	
.loading_screen
	background: GRAY
	position: absolute
	top: 0
	left: 0
	width: 100%
	height: 100%
	z-index: 2
	
	.inner
		text-align: center
		display: flex
		align-items: center
		justify-content: center
		position: absolute
		top: 0
		left: 0
		width: 100%
		height: 100%
		.loading_spin
			display: inline-block
			
	
	
