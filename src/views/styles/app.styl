// --------------------------------------------
// Colors
BLACK  	= #1f1f1f
GRAY   	= #dedede
GRAY_2 	= #615b5b

// Sizes
MAX_WIDTH = 1140px
FOOTER_HEIGHT = 80px

// --------------------------------------------
// Fonts
open_sans()
	font-family: 'Open Sans', sans-serif
	
open_bold()
	font-weight: 600
	
// --------------------------------------------
// Structure classes

.centered
	max-width: MAX_WIDTH
	margin: 0 auto

.clear
	clear: both

// --------------------------------------------
// Imports
@import '_shared/_reset.styl'
@import '_shared/_header_footer.styl'
@import '_shared/_modal.styl'
@import '_shared/_ui.styl'

// --------------------------------------------
// Footer always pushed to the bottom
html,body
	height: 100%
	
#content
	min-height: 100%
	height: auto !important;
	height: 100%;
	margin: 0 auto -(FOOTER_HEIGHT);
	
.push, footer
	height: FOOTER_HEIGHT

// --------------------------------------------
// General Layout
body
	background: GRAY
	color: black
	font-size: 100%;
	open_sans()
		
#content
	padding-top: 42px
	background-color: #fff 
	text-align: center
